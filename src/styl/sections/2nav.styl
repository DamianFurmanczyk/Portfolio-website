.nav
    background: linear-gradient(to bottom, darken(cwhitish, 4%), cwhitish);

    &-container
        padding 2rem 1.7rem 2rem .9rem
        display flex
        justify-content: space-between
        align-items: center
        max-width 1400px

    &-logo
        font-family mainF
        box-shadow: 0 0 2px -1px cdarkgray
        font-weight: 500
        padding 2.2rem
        background:  transparentify(cyellow, .8) !important
        position relative
        cursor pointer
        &::after
            content: "DF"
            position absolute
            bottom 0
            left 0
            font-size 2.3rem
            line-height 1
            margin 0
            color cdarkgray

    &-ul
        display flex
        &:hover a
            opacity 0.7
    
    &-li
        padding 0 1.5rem
        &:hover > a
            opacity 1

    &-link
        transition .25s ease-in-out
        font-weight: 500
        font-size 1.3rem
        color cblue
        text-decoration: none