.nav
    box-shadow: 2px 0 2px transparentify(clightblue, .8)
    position relative
    z-index 200

    &-container
        padding 1rem 1.7rem 1rem .9rem
        display flex
        justify-content: space-between
        align-items: center
        max-width 1200px
        width 80%

    &-logo
        font-family mainF
        box-shadow: 0 0 2px -1px cdarkgray
        font-weight: 500
        padding 1.7rem
        background:  transparentify(cyellow, .8) !important
        position relative
        cursor pointer
        &::after
            content: "DF"
            position absolute
            bottom 0
            left 0
            font-size 2rem
            line-height 1
            margin 0
            color cdarkgray

    &-ul
        display flex
        &:hover a
            opacity 0.6
    
    &-li
        padding 0 1.5rem
        &:hover > a
            opacity 1

    &-link
        transition .35s ease-in-out
        font-weight: 500
        font-size 1rem
        color cblue
        text-decoration: none